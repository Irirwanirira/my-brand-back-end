{
    "compilerOptions": {
        "target": "es2016",
        "lib": ["es2016", "dom"],
        "jsx": "preserve",
        "rootDir": "./src", 
        "module": "NodeNext",
        "baseUrl": "./", 
        "moduleResolution": "NodeNext",
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*"
    , "build/routes/routes.js"
    ]
}